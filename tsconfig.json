{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "assets": ["./assets"],
      "components": ["./components"],
      "styles": ["./styles"],
    },
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
