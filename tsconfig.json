{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "assets": ["./assets"],
      "components": ["./components"],
      "styles": ["./styles"],
    },
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "declaration": true,
    "jsx": "react",
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".cache", "./explorer.tsx", "./index.html", "./app.tsx"],
  "lib": ["es2015"]
}
