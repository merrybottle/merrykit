{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "assets": ["./assets"],
      "components": ["./components"],
      "explorer-components": ["./explorer/components"],
      "explorer-utils": ["./explorer/utils"],
      "explorer-previews": ["./explorer/previews"],
      "docs": ["./typedocs"],
      "styles": ["./styles"],
    },
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "declaration": true,
    "jsx": "react",
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "noEmit": true
  },
  "typedocOptions": {
    "inputFiles": ["./src/components"],
    "json": ["./src/typedocs/index.json"],
    "mode": "library"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".cache", "./explorer", "./index.html"],
  "lib": ["es2015"]
}
